<div class="row">
    <div class="main-login col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
        <div class="logo margin-top-30">
            <img src="/images/logo.png" alt="Instacab"/>
        </div>
        <!-- start: LOGIN BOX -->
        <div class="box-login">
            <% if (req.session.flash && req.session.flash.error) { %>
            <div class="msg_error">
                <%= req.session.flash.error%>
            </div>
            <% } %>
            <% if (req.session.flash && req.session.flash.success) { %>
            <div class="msg_success">
                <%= req.session.flash.success%>
            </div>
            <% } %>
            <form class="form-login" method="POST" action="/admin/create">
                <fieldset>
                    <legend>
                        Sign Up
                    </legend>
                    <div class="form-group">
                        <span class="input-icon">
                            <input type="text" class="form-control" name="email" placeholder="Email" required="required">
                            <i class="fa fa-user"></i> </span>
                    </div>
                    <div class="form-group form-actions">
                        <span class="input-icon">
                            <input type="password" class="form-control password" name="password" placeholder="Password"  required="required">
                            <i class="fa fa-lock"></i>                                    
                    </div>
                    <div class="form-group form-actions">
                        <span class="input-icon">
                            <select name="user_type" id="user_type" required="required">
                                <option value="A">Admin</option>
                                <option value="D">Driver</option>
                                <option value="C">Customer</option>
                                <option value="M">Company</option>
                            </select>                                  
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary pull-right">
                            Sign Up <i class="fa fa-arrow-circle-right"></i>
                        </button>
                    </div>                            
                </fieldset>
            </form>
            <!-- start: COPYRIGHT -->
            <div class="copyright">
                &copy; <span class="current-year"></span><span class="text-bold text-uppercase"> Instacab</span>. <span>All rights reserved</span>
            </div>
            <!-- end: COPYRIGHT -->
        </div>
        <!-- end: LOGIN BOX -->
    </div>
</div>